{
	"type" : "sequential",
	"config" : {
		"item" : {
			"output" : {
				"path" : "weighted-load"
			}
		},
		"load" : {
			"concurrency" : 5
		},
		"storage" : {
			"type" : "fs"
		}
	},
	"jobs" : [
		{
			"type" : "precondition",
			"config" : {
				"item" : {
					"data" : {
						"size" : "1KB"
					},
					"output" : {
						"file" : "weighted-load.csv"
					}
				},
				"load" : {
					"limit" : {
						"count" : 10000
					},
					"metrics" : {
						"period" : 0
					}
				}
			}
		},
		{
			"type" : "load",
			"config" : {
				"item" : {
					"data" : {
						"size" : "4KB-16KB"
					},
					"input" : {
						"file" : "weighted-load.csv"
					}
				},
				"load" : {
					"circular" : true,
					"limit" : {
						"time" : "5m"
					},
					"type" : [
						"create=20%", "read=80%"
					]
				}
			}
		}
	]
}
