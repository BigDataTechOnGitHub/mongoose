// example command:
// java -DITEM_DST_CONTAINER=mongoose -DITEM_SRC_FILE= -DLOAD_THREADS=100 -DITEM_DATA_SIZE=1KB -DLOAD_TYPE=create -jar mongoose-<VERSION>/mongoose.jar --scenario-file=mongoose-<VERSION>/scenario/misc/env-vars-substitution.json
{
	"type" : "load",
	"config" : {
		"item" : {
			"data" : {
				"size" : "${ITEM_DATA_SIZE}"
			},
			"output" : {
				"path" : "${ITEM_DST_CONTAINER}"
			},
			"input" : {
				"file" : "${ITEM_SRC_FILE}"
			}
		},
		"load" : {
			"type" : "${LOAD_TYPE}"
		},
		"storage" : {
			"driver" : {
				"concurrency" : "${LOAD_THREADS}"
			}
		}
	}
}
