{
	"type" : "for",
	"value" : "size",
	"in" : [
		0, "1KB", "1MB"
	],
	"config" : {
		"item" : {
			"data" : {
				"size" : "${size}"
			}
		},
		"test" : {
			"step" : {
				"limit" : {
					"count" : 1000000,
					"time" : "10s"
				},
				"metrics" : {
					"period" : 0
				}
			}
		}
	},
	"steps" : [
		{
			"type" : "for",
			"value" : "threads",
			"in" : [
				1, 10, 100
			],
			"config" : {
				"item" : {
					"output" : {
						"path" : "${size}_${threads}threads"
					}
				},
				"storage" : {
					"driver" : {
						"concurrency" : "${threads}"
					}
				}
			},
			"steps" : [
				{
					"type" : "load",
					"config" : {
						"item" : {
							"output" : {
								"file" : "${size}_${threads}threads.csv"
							}
						},
						"load" : {
							"type" : "create"
						},
						"test" : {
							"step" : {
								"name" : "C${threads}_${size}"
							}
						}
					}
				}, {
					"type" : "load",
					"config" : {
						"item" : {
							"input" : {
								"file" : "${size}_${threads}threads.csv"
							}
						},
						"load" : {
							"type" : "read"
						},
						"test" : {
							"step" : {
								"name" : "R${threads}_${size}"
							}
						}
					}
				}, {
					"type" : "load",
					"config" : {
						"item" : {
							"input" : {
								"file" : "${size}_${threads}threads.csv"
							}
						},
						"load" : {
							"type" : "delete"
						},
						"test" : {
							"step" : {
								"name" : "D${threads}_${size}"
							}
						}
					}
				}
			]
		}
	]
}
