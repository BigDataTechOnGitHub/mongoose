{
	"type" : "sequential",
	"config" : {
		"item" : {
			"output" : {
				"path" : "partial-append"
			}
		},
		"load" : {
			"limit" : {
				"count" : 1
			}
		}
	},
	"jobs": [
		{
			// write new data
			"type" : "precondition",
			"config" : {
				"item" : {
					"output" : {
						"file" : "partial-append-0.csv"
					}
				}
			}
		}, {
			// append the written data
			"type": "load",
			"config" : {
				"item" : {
					"data" : {
						"ranges" : {
							"fixed" : "1024-4096"
						}
					},
					"input" : {
						"file" : "partial-append-0.csv"
					},
					"output" : {
						"file" : "partial-append-1.csv"
					}
				},
				"load" : {
					"type" : "update"
				}
			}
		}, {
			// verify the updated data
			"type": "load",
			"config" : {
				"item" : {
					"input" : {
						"file" : "partial-append-1.csv"
					}
				},
				"load" : {
					"type" : "read"
				}
			}
		}
	]
}
