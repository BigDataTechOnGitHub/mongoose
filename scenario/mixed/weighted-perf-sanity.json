{
	"type" : "sequential",
	"config" : {
		"item" : {
			"data" : {
				"size" : "10KB"
			},
			"output" : {
				"path" : "weighted-perf-sanity"
			}
		},
		"load" : {
			"circular" : true,
			"limit" : {
				"time" : "1m"
			},
			"concurrency" : 2
		}
	},
	"jobs" : [
		{
			"type" : "precondition",
			"config" : {
				"item" : {
					"output" : {
						"file" : "weighted-load.csv"
					}
				},
				"load" : {
					"limit" : {
						"count" : 10000
					},
					"metrics" : {
						"period" : 0
					}
				}
			}
		}, {
			"type" : "load",
			"config" : {
				"item" : {
					"input" : {
						"file" : "weighted-load.csv"
					}
				},
				"load" : {
					"type" : [
						"create=50%", "read=50%"
					]
				}
			}
		}, {
			"type" : "command",
			"value" : "sleep 1m"
		}, {
			"type" : "parallel",
			"config" : {
				"load" : {
					"concurrency" : 1
				}
			},
			"jobs" : [
				{
					"type" : "load",
					"config" : {
						"load" : {
							"type" : "create"
						}
					}
				}, {
					"type" : "load",
					"config" : {
						"item" : {
							"input" : {
								"file" : "weighted-load.csv"
							}
						},
						"load" : {
							"type" : "read"
						}
					}
				}
			]
		}
	]
}
