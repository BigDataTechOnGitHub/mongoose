{
	"type" : "sequential",
	"config" : {
		"item" : {
			"output" : {
				"path" : "circular-update"
			},
			"data" : {
				"size" : "1KB"
			}
		},
		"load" : {
			"concurrency" : 10
		}
	},
	"jobs" : [
		{
			"type" : "precondition",
			"config" : {
				"item" : {
					"output" : {
						"file" : "circular-update.csv"
					}
				},
				"load" : {
					"limit" : {
						"count" : 1000
					}
				}
			}
		},
		{
			"type" : "load",
			"config" : {
				"item" : {
					"data" : {
						"ranges" : {
							"random" : 5
						}
					},
					"input" : {
						"file" : "circular-update.csv"
					}
				},
				"load" : {
					"type" : "update",
					"circular" : true,
					"limit" : {
						// count -> infinity instead of inherited value of 1, time -> 1 minute
						"count" : 0,
						"time" : "1m"
					}
				}
			}
		}
	]
}
