{
	"type" : "sequential",
	"config" : {
		"item" : {
			"output" : {
				"path" : "circular-read-updated"
			},
			"data" : {
				"size" : "1KB"
			}
		},
		"load" : {
			"limit" : {
				"count" : 1000
			},
			"concurrency" : 10
		}
	},
	"jobs": [
		{
			"type" : "precondition",
			"config" : {
				"item" : {
					"output" : {
						"file" : "circular-read-updated-0.csv"
					}
				}
			}
		}, {
			"type": "load",
			"config" : {
				"item" : {
					"data" : {
						"ranges" : {
							"random" : 3
						}
					},
					"output" : {
						"file" : "circular-read-updated-1.csv"
					},
					"input" : {
						"file" : "circular-read-updated-0.csv"
					}
				},
				"load" : {
					"type" : "update",
					"circular" : true,
					"limit" : {
						// count -> infinity instead of inherited value of 1, time -> 1 minute
						"count" : 0,
						"time" : "1m"
					}
				}
			}
		}, {
			"type" : "command",
			"value" : "sleep 20"
		}, {
			"type": "load",
			"config" : {
				"item" : {
					"input" : {
						"file" : "circular-read-updated-1.csv"
					}
				},
				"load" : {
					"type" : "read",
					"circular" : true,
					"limit" : {
						// count -> infinity instead of inherited value, time -> 1 minute
						"count" : 0,
						"time" : "1m"
					}
				}
			}
		}
	]
}

