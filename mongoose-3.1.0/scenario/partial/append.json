					"input" : {
						"file" : "partial-append-0.csv"
					},
					"output" : {
						"file" : "partial-append-1.csv"
					}
				},
				"load" : {
					"type" : "update"
				}
			}
		}, {
			"type": "load",
			"config" : {
				"item" : {
					"data" : {
						"verify" : true
					},
					"input" : {
						"file" : "partial-append-1.csv"
					}
				},
				"load" : {
					"type" : "read"
				}
			}
		}
