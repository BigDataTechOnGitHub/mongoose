{
	"type" : "sequential",
	"config" : {
		"item" : {
			"data" : {
				"size" : "8KB"
			},
			"output" : {
				"path" : "partial-append"
			}
		},
		"load" : {
			"limit" : {
				"count" : 100
			}
		}
	},
	"jobs": [
