{
	"type" : "for",
	"value" : "size",
	"in" : [
		0, "1KB", "1MB"
	],
	"config" : {
		"item" : {
			"data" : {
				"size" : "${size}"
			}
		},
		"load" : {
			"limit" : {
				"count" : 1000000,
				"time" : "10s"
			},
			"metrics" : {
				"period" : 0
			}
		}
	},
	"jobs" : [
		{
			"type" : "for",
			"value" : "threads",
			"in" : [
				1, 10, 100
			],
			"config" : {
				"item" : {
					"output" : {
						"path" : "${size}_${threads}threads"
					}
				},
				"load" : {
					"concurrency" : "${threads}"
				}
			},
			"jobs" : [
				{
					"type" : "load",
					"config" : {
						"item" : {
							"output" : {
								"file" : "${size}_${threads}threads.csv"
							}
						},
						"load" : {
							"job" : {
								"name" : "C${threads}_${size}"
							},
							"type" : "create"
						}
					}
				}, {
					"type" : "load",
					"config" : {
						"item" : {
							"input" : {
								"file" : "${size}_${threads}threads.csv"
							}
						},
						"load" : {
							"job" : {
								"name" : "R${threads}_${size}"
							},
							"type" : "read"
						}
					}
				}, {
					"type" : "load",
					"config" : {
						"item" : {
							"input" : {
								"file" : "${size}_${threads}threads.csv"
							}
						},
						"load" : {
							"job" : {
								"name" : "D${threads}_${size}"
							},
							"type" : "delete"
						}
					}
				}
			]
		}
	]
}
